<p id="notice"><%= notice %></p>
<div class="container porfolio-container">
	<div class="row">
		<div class="col-sm-8 col-md-7">
			<%= image_tag portfolio_img(@portfolio_item.thumb_image, 'thumb'), width: '100%' %>
		</div>
		<div class="col-sm-4 col-md-5">
			
			<h1>
				<%= @portfolio_item.title %>
			</h1>

			<em>
				<%= @portfolio_item.subtitle %>
			</em>

			<p>
				<%= @portfolio_item.body %>
			</p>

			<h2>Technologies Used: </h2>

			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %></p>
			<% end %>
		</div>

	</div>
	<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> 
	<%= link_to 'View All', portfolios_path %>
</div>



