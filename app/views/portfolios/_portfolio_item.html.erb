<div class="card ml-2 mr-2 mb-2" data-id="<%= portfolio_item.id %>">
    <%= image_tag(portfolio_item.thumb_image_url, size: "300x300") unless portfolio_item.thumb_image.nil? %>
  <p class="card-text">
    <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
  </p>
</div>